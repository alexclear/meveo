<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

	<display-name>meveo-admin</display-name>
	<context-param>
		<param-name>javax.faces.PROJECT_STAGE</param-name>
		<param-value>Development</param-value>
	</context-param>

	<!-- Standard JSF date converters use system time zone - not default -->
	<context-param>
		<param-name>javax.faces.DATETIMECONVERTER_DEFAULT_TIMEZONE_IS_SYSTEM_TIMEZONE</param-name>
		<param-value>true</param-value>
	</context-param>

	<context-param>
		<param-name>javax.faces.FACELETS_LIBRARIES</param-name>
		<param-value>/taglib/happyfaces.taglib.xml;/taglib/primefacesextension.taglib.xml</param-value>
	</context-param>
	<!-- Skip comment in jsf pages -->
	<context-param>
		<param-name>javax.faces.FACELETS_SKIP_COMMENTS</param-name>
		<param-value>true</param-value>
	</context-param>
	<!-- Bean validation -->
	<context-param>
		<param-name>javax.faces.INTERPRET_EMPTY_STRING_SUBMITTED_VALUES_AS_NULL</param-name>
		<param-value>true</param-value>
	</context-param>
	<filter>
		<filter-name>UTF8CharacterEncodingFilter</filter-name>
		<filter-class>org.meveo.admin.filter.UTF8CharacterEncodingFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>UTF8CharacterEncodingFilter</filter-name>
		<url-pattern>*.jsf</url-pattern>
	</filter-mapping>
	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>
	<!-- Error page -->
	<error-page>
		<error-code>500</error-code>
		<location>/applicationerror.jsp</location>
	</error-page>
	<error-page>
		<exception-type>java.lang.IllegalStateException</exception-type>
		<location>/toomanysessionserror.html</location>
	</error-page>

	<servlet>
		<servlet-name>javax.ws.rs.core.Application</servlet-name>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>javax.ws.rs.core.Application</servlet-name>
		<url-pattern>/api/rest/*</url-pattern>
	</servlet-mapping>

	<!-- Primefaces theme <context-param> <param-name>primefaces.THEME</param-name> 
		<param-value>south-street</param-value> </context-param> Security <security-constraint> 
		<display-name>Restrict raw XHTML Documents</display-name> <web-resource-collection> 
		<web-resource-name>XHTML</web-resource-name> <url-pattern>*.xhtml</url-pattern> 
		</web-resource-collection> <auth-constraint /> </security-constraint> -->

</web-app>
